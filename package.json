    "monaco-editor-textmate": "^2.2.2",
    "monaco-editor-vue": "^1.0.10",
    "monaco-editor-webpack-plugin": "1.8.*",
    "monaco-textmate": "^3.0.1",
    "node-pty": "^0.10.1",
    "onigasm": "^2.2.5",
    "pinia": "^2.0.12",
    "prettier": "^2.5.1",
    "regenerator-runtime": "^0.13.9",
    "vue": "^2.6.14",
    "vue-resize": "^1.0.1",
    "vue-split-view": "^1.0.0",
